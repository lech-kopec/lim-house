<% provide(:title,'Lim-House') %>
<div>
	<% if signed_in? %>
		<div >
			<div class="pull-right"> <%= link_to "Dodaj nowy ticket zwrotu", new_prod_return_path, class: "btn btn-primary" %></div>
			<ul class="nav nav-tabs products_auctions_tabs">
				<li class="active"><a data-toggle="tab" href="#all">Wszystkie</a></li>
				<li ><a data-toggle="tab" href="#received" >Przyjete(TODO)</a></li>
				<li ><a data-toggle="tab" href="#ready_to_send" >Gotowe do wysylki(TODO)</a></li>
				<li ><a data-toggle="tab" href="#sent" >Wyslane(TODO)</a></li>
			</ul>
			<div class="tab-content">
				<div id="all" class="tab-pane active">
				<table class="table table-bordered td">
					<tr>
						<th><div class="center">#</div></th>
						<th><div class="center">Tytuł aukcji</div></th>
						<th><div class="center">Klient</div></th>
						<th><div class="center">Data transakcji</div></th>
						<th><div class="center">Data zwrotu</div></th>
						<th><div class="center">Status</div></th>
						<th><div class="center">Komentarze</div></th>
						<th><div class="center">Zmień status</div></th>
						<th><div class="center">Załącznik</div></th>
					</tr>
					<%= render partial: 'prod_returns/prod_return', collection: @all %>
				</table>
					<%= will_paginate @all %>
				</div>
				<div id="ready_to_send" class="tab-pane">
					
				</div>
				<div id="sent" class="tab-pane">
					
				</div>
			</div>
		</div>
	<% else %>
		<div class="center">
			<h1>Welcome to the Lim-House</h1>
			<%= link_to "Please sign in", signin_path, class: "btn btn-large btn-primary" %>
		</div>
	<% end %>
</div>