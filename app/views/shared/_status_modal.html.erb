<button class="btn btn-small" data-toggle="modal" data-target=<%= "#change_status#{prod_return.id}"%> id=<%="changeStatus#{prod_return.id}"%> >
  Zmien status
</button>
<div class="modal fade" id="<%="change_status#{prod_return.id}"%>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h5 class="modal-title" id="myModalLabel">
			<%= form_for(prod_return, url: change_status_prod_return_path(prod_return)) do |f|%>
        	Zmie≈Ñ status z <%= "#{ApplicationHelper::ReturnsStatus.key(prod_return.status)}" %> na <%= f.select :status, options_for_select(ApplicationHelper::ReturnsStatus.keys.to_a.map {|z| [z]}, next_status(prod_return.status)), {}, {id:"select#{prod_return.id}", onchange:"updateCommentMsg('select#{prod_return.id}', 'content#{prod_return.id}')"} %>
        </h5>
      </div>
      <div class="modal-body">
      		<%= fields_for prod_return.comments.build do |c|%>
				<%= c.text_area :content, value:generate_status_message(prod_return.status), :rows => 4, :style => 'width: 90%', id:"content#{prod_return.id}", oninput:"textLengthLimit('content#{prod_return.id}','textLength#{prod_return.id}','200')" %> <div id=<%="textLength#{prod_return.id}"%>></div>
			<% end %>
      </div>
      <div class="modal-footer">
      	<button type="button" class="btn btn-default" data-dismiss="modal">Anuluj</button>
      		<%= f.hidden_field :ret, value:prod_return.id %>
      		<%= f.hidden_field :user_id, value:current_user.id %>
          <%= f.submit "Gotowe", class:"btn btn-default btn-success", id:"changeStatusOK#{prod_return.id}" %>
      		<% end %>
      </div>
    </div>
  </div>
</div>
