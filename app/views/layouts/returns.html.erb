<!DOCTYPE html>

<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css" rel="stylesheet">
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %>
</head>

<body>
	<div class="container-fluid">
		<%= render 'layouts/header' %>
	
		<% flash.each do |key, value| %>
			<div class="alert alert-<%= key %>"><%= value %></div>
		<% end %>
		<div class="row">
			<div>
				<%= yield %>
			</div>
		</div>
		<% render 'layouts/footer' %>
		<%= debug(params) if Rails.env.development? %>
	</div>


<script type="text/javascript">

function textLengthLimit(id_source, id_target, limit) {
	var tmp;
	var text;
    tmp = limit - document.getElementById(id_source).value.length
    if (tmp > 0) {
    	text = "pozostalo "+tmp;
    }else {
    	text = "tekst jest za dlugi o "+ Math.abs(tmp);
    }
    document.getElementById(id_target).innerHTML = text;
}

function updateCommentMsg(id_source, id_target) {
	var tmp;
	var text;
    tmp = document.getElementById(id_source).value;
    if (tmp == "przyjete") {
    	text = "Oczekiwanie na przesyłkę, przekazane dalej";
    }else if (tmp == "przetworzone") {
    	text = "Przesylka dotarla, wszystko sie zgadza. Czeka na wyslanie";
    }else if (tmp == "wyslane") {
    	text = "Przesylka wyslana";
    }else if (tmp == "zamknij_usun") {
    	text = "Zwrot zamkniety i usuniety";
    }else if (tmp == "zwrot_gotowki") {
      text = "Przesylka dotarla, czeka na wyslanie gotowki";
    }else if (tmp == "wymiana") {
      text = "Przesylka dotarla. Czeka na wyslanie wymiany";
    }else {
      text = "Zwrot zamkniety i przeniesiony do archiwum"
    }
    document.getElementById(id_target).value = text;
}
</script>
</body>
</html>
